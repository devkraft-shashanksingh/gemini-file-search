{
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/upload-doc",
            "dest": "backend/main.py"
        },
        {
            "src": "/search",
            "dest": "backend/main.py"
        },
        {
            "src": "/docs",
            "dest": "backend/main.py"
        },
        {
            "src": "/openapi.json",
            "dest": "backend/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}